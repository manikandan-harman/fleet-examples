apiVersion: apps/v1
kind: Deployment
metadata:
  name: ekuiper-manager
  namespace: industrialqa-ns
spec:
  selector:
    matchLabels:
      app: ekuiper-manager
  replicas: 1
  template:
    metadata:
      labels:
        app: ekuiper-manager
    spec:
     containers:
      - name: ekuiper-manager
        image: emqx/ekuiper-manager:1.9
        imagePullPolicy: IfNotPresent
        env:
        - name: DEFAULT_EKUIPER_ENDPOINT
          value: 'http://ekuipersvc.latam-vcr-ns.svc.cluster.local:9081'
        ports:
            - containerPort: 9082
              name: management
              protocol: TCP    				  
---
apiVersion: v1
kind: Service
metadata:
  name: ekuipermgrsvc
  namespace: indistrialqa-ns
spec:
  type: ClusterIP
  selector:
    app: ekuiper-manager
  ports:
    - name: management
      port: 9082
      targetPort: 9082
      protocol: TCP
